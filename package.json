{
  "name": "@my-monorepo/obsidian-plugins",
  "version": "1.0.0",
  "description": "Monorepo for Obsidian plugins",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r build",
    "build:common": "pnpm --filter @my-monorepo/common build",
    "build:plugin1": "pnpm --filter @my-monorepo/plugin1 build",
    "dev:plugin1": "pnpm --filter @my-monorepo/plugin1 dev",
    "install-plugin1": "pnpm --filter @my-monorepo/plugin1 install-plugin",
    "format": "biome format --write packages --diagnostic-level=info",
    "lint": "biome lint --write packages --diagnostic-level=info",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "obsidian",
    "monorepo",
    "plugins"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
