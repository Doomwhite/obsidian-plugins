{
  "name": "@doomwhite-obsidian-plugins/main",
  "version": "1.0.0",
  "description": "Monorepo for Obsidian plugins",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r build",
    "dev:common": "pnpm --filter @doomwhite-obsidian-plugins/common dev",
    "build:common": "pnpm --filter @doomwhite-obsidian-plugins/common build",
    "dev:plugin1": "pnpm --filter @doomwhite-obsidian-plugins/plugin1 dev",
    "build:plugin1": "pnpm --filter @doomwhite-obsidian-plugins/plugin1 build",
    "format": "biome format --write packages --diagnostic-level=info",
    "lint": "biome lint --write packages --diagnostic-level=info",
    "lint:check": "biome lint --write packages --diagnostic-level=error"
  },
  "keywords": [
    "obsidian",
    "monorepo",
    "plugins"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typed-assert": "^1.0.9"
  }
}
